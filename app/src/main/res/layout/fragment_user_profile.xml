<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gurpartap.skip_and_buy.Controller.UserProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="200dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:weightSum="1">

            <ImageView
                app:srcCompat="@drawable/shoppingcart"
                android:id="@+id/imageView6"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_weight="0.32"
                android:layout_marginLeft="130dp"
                android:layout_height="80dp"
                android:layout_width="20dp" />

            <android.support.design.widget.FloatingActionButton
                android:layout_height="31dp"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_menu_camera"
                android:id="@+id/floatingActionButton2"
                android:layout_marginTop="55dp"
                app:backgroundTint="@null"
                android:tint="@color/colorAccent"
                android:layout_width="31dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">


            <TextView
                android:text="Gurpartap Singh"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textStyle="normal|bold"
                android:textSize="22dp"
                android:layout_weight="0.40"
                android:layout_marginLeft="80dp"
                android:layout_width="140dp" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_menu_edit"
                android:id="@+id/floatingActionButton4"
                android:layout_weight="0.40"
                app:backgroundTint="#ffffff"
                android:tint="@color/colorAccent"
                android:layout_marginTop="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/emailTextField"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:hint="Password"
                android:textSize="18sp"
                android:textCursorDrawable="@null"
                android:textColorHint="#000000"
                android:layout_marginRight="200dp"
                android:layout_marginLeft="40dp"
                android:text="aulakh161@gmail.com"
                android:layout_weight="1" />
            <android.support.design.widget.FloatingActionButton
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_menu_edit"
                android:id="@+id/floatingActionButton4"
                android:layout_weight="0.40"
                app:backgroundTint="@color/colorAccent"
                android:tint="#ffffff"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="-200dp"
                android:layout_width="27dp"
                android:layout_height="27dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/emailTextField"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:hint="Password"
                android:textSize="18sp"
                android:textCursorDrawable="@null"
                android:textColorHint="#000000"
                android:layout_marginRight="200dp"
                android:layout_marginLeft="40dp"
                android:text="+ 647 527 1038"
                android:layout_weight="1" />
            <android.support.design.widget.FloatingActionButton
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_menu_edit"
                android:id="@+id/floatingActionButton4"
                android:layout_weight="0.40"
                app:backgroundTint="@color/colorAccent"
                android:tint="#ffffff"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="-200dp"
                android:layout_width="27dp"
                android:layout_height="27dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="text|textPassword"
                android:ems="10"
                android:id="@+id/emailTextField"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:hint="Password"
                android:textSize="18sp"
                android:textCursorDrawable="@null"
                android:textColorHint="#000000"
                android:layout_marginRight="200dp"
                android:layout_marginLeft="40dp"
                android:text="gurpartapSingh"
                android:layout_weight="1" />
            <android.support.design.widget.FloatingActionButton
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_menu_edit"
                android:id="@+id/floatingActionButton4"
                android:layout_weight="0.40"
                app:backgroundTint="@color/colorAccent"
                android:tint="#ffffff"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="-200dp"
                android:layout_width="27dp"
                android:layout_height="27dp" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:text="SIGN OUT"
            android:id="@+id/loginButton"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_height="35dp"
            android:textSize="20dp" />
    </LinearLayout>
</FrameLayout>
